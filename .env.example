# --------------------------------------
# Telegram Bot Settings
# --------------------------------------
# Get token from BotFather on Telegram
TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Your bot's username (e.g., @MyTestBot) - Used for reference/display
BOT_USERNAME=@YourBotUsername

# --------------------------------------
# Initial Administrator Details
# --------------------------------------
# Used ONLY to bootstrap the VERY FIRST admin if no admins exist in the DB.
# Subsequent admin management is done via /add_admin, /remove_admin commands.
# Telegram User ID of the first admin (Integer)
ADMIN_USER_ID=123456789
# Telegram Username of the first admin (without @) - for reference
ADMIN_USERNAME=YourAdminTelegramUsername

# --------------------------------------
# MongoDB Database Settings
# --------------------------------------
# Connection URI for MongoDB.
# For local Docker Compose setup (using service name 'mongo-db'):
MONGO_URI=mongodb://mongo_user:your_mongo_password@mongo-db:27017/?authSource=admin
# For MongoDB Atlas (example):
# MONGO_URI=mongodb+srv://<username>:<password>@your_cluster.mongodb.net/?retryWrites=true&w=majority

# Username and Password for MongoDB (must match MONGO_URI if authentication is used)
MONGO_USER=mongo_user
MONGO_PASS=your_mongo_password

# Name of the database to use within MongoDB
MONGO_DB_NAME=telegram_test_bot_db

# --------------------------------------
# Initial Data Seeding (Optional)
# --------------------------------------
# Set to True to enable seeding from local files on first startup
# (Checks if DB collections/roles are already populated)
INITIAL_SEED_ENABLED=True

# Path to the folder containing initial test CSV files (e.g., testMyTest.csv)
# Path is relative to the project root directory.
TESTS_SEED_FOLDER=./seed_data/tests

# Path to the file containing initial teacher usernames (one per line, without @)
# These users MUST exist in the DB (i.e., have started the bot) to be promoted.
# Path is relative to the project root directory.
TEACHERS_SEED_FILE=./seed_data/teachers.txt

# --------------------------------------
# Logging Configuration (Optional)
# --------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# --------------------------------------
# Temporary Files (Optional) - Not currently used heavily
# --------------------------------------
# TEMP_FOLDER=temp_files

# --------------------------------------
# Mongo Express Settings (Optional but Recommended)
# --------------------------------------
# Credentials for accessing the Mongo Express web UI itself via Basic Auth
MONGO_EXPRESS_USER=mongoexpressadmin
MONGO_EXPRESS_PASS=expresspassword123